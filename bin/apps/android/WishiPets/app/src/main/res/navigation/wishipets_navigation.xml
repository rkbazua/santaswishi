<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/wishipets_navigation"
            app:startDestination="@id/feederFragment">

    <fragment
            android:id="@+id/feederFragment"
            android:name="com.rbazua.wishipets.view.FeederFragment"
            android:label="FeederFragment">
        <action
                android:id="@+id/actionStoryFragment"
                app:destination="@id/storyDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
        <action
                android:id="@+id/actionSettings"
                app:destination="@id/settingsFragment"/>
    </fragment>
    <fragment
            android:id="@+id/storyDetailFragment"
            android:name="com.rbazua.wishipets.view.StoryDetailFragment"
            android:label="StoryDetailFragment">
        <action
                android:id="@+id/actionFeederFragment"
                app:destination="@id/feederFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
        <argument
                android:name="petuid"
                android:defaultValue="0"
                app:argType="string"/>
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="com.rbazua.wishipets.view.SettingsFragment"
            android:label="SettingsFragment"/>
</navigation>