<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="story"
                type="com.rbazua.wishipets.model.Story"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.StoryDetailFragment">
        <ImageView
                android:id="@+id/detailStoryPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:imageUrl="@{String.valueOf(story.petuid)}"
                android:minHeight="200dp"/>
        <TextView
                android:id="@+id/detailStoryTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailStoryPicture"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:text="@{story.title}"/>
        <TextView
                android:id="@+id/detailStoryDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailStoryTitleText"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:text="@{story.description}"/>
    </RelativeLayout>
</layout>